<Page x:Class="Client.Views.CategoriesManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Kategorieverwaltung">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Categories}" AutoGenerateColumns="False" FontSize="15"
                  GridLinesVisibility="Horizontal" IsReadOnly="True" RowHeight="30"
                  SelectedItem="{Binding SelectedCategory}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="{x:Type Label}">
                    <Setter Property="DockPanel.Dock" Value="Left" />
                    <Setter Property="FontSize" Value="15" />
                </Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="FontSize" Value="15" />
                </Style>
            </Grid.Resources>
            <DockPanel Grid.Row="0" Width="300">
                <Label BorderThickness="0,0,0,3" BorderBrush="DarkGray" Height="30" Width="110">Name</Label>
                <TextBox Text="{Binding SelectedCategory.Name}" BorderThickness="0,0,0,3" Height="30"
                         IsReadOnly="{Binding EditMode}" />
            </DockPanel>
        </Grid>
    </Grid>
</Page>
